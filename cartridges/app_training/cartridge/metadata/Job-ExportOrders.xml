<?xml version="1.0" encoding="UTF-8"?>
<jobs xmlns="http://www.demandware.com/xml/impex/jobs/2015-07-01">
    <job job-id="ExportOrders">
        <description>Creates a CSV / Excel file that contains all orders placed by customers.</description>
        <parameters/>
        <flow>
            <context site-id="RefArch"/>
            <step step-id="ExportOrders" type="ExecuteScriptModule" enforce-restart="false">
                <description>Export Orders</description>
                <parameters>
                    <parameter name="ExecuteScriptModule.Module">app_training/cartridge/scripts/jobs/createOrderCSV.js</parameter>
                    <parameter name="ExecuteScriptModule.FunctionName">execute</parameter>
                    <parameter name="ExecuteScriptModule.Transactional">false</parameter>
                    <parameter name="filePath">/IMPEX/src/orders.csv</parameter>
                </parameters>
            </step>
        </flow>
        <rules/>
        <triggers>
            <run-once enabled="false">
                <date>2025-03-05Z</date>
                <time>12:57:00.000Z</time>
            </run-once>
        </triggers>
    </job>
</jobs>