<isdecorate template="common/layout/page">

    <div class="row col-md-6">
        <isif condition="${pdict.productIDs && pdict.productIDs.length > 0}">
            <isloop items="${pdict.productIDs}" var="productID">
                <div class="col-6 col-sm-4">
                    <isinclude url="${URLUtils.url('Tile-Show', 'pid', productID, 'swatches', true, 'ratings', true)}" />
                </div>
            </isloop>
        </isif>
    </div>
    
</isdecorate>